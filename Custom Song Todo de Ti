use_bpm 115
use_synth :prophet

# VARIABLES TO STORE SAMPLES
Bad_Bunny= "/Users/vivianvargas/Downloads/titi mi pregunto.mp3"

# FUNCTION 
define :melody_pattern do
  play :bb4
  sleep 0.5
  play :eb4
  sleep 0.5
  play :gb4
  sleep 0.5
  play :eb4
  sleep 0.5
end

4.times do
  melody_pattern
end
sample Bad_Bunny do
end
sleep 4
live_loop :drums do
  sample :bd_haus
  sleep 4
end
live_loop :melody do
  melody_pattern
end
